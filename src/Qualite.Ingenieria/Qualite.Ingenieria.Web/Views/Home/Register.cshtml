@{
    Layout = null;
}

@model Qualite.Ingenieria.App.Model.Users.UserRegistrationSignature

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Qualité Ingenieria - Registro Page</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
</head>
<body>
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Inscribirse</p>

                                    <form asp-controller="Home" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" asp-antiforgery="true" asp-action="Register" class="mx-1 mx-md-4" method="post">
                                        <div asp-validation-summary="ModelOnly" class="message-error"></div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" asp-for="Name">Nombre</label>
                                                <input type="text" id="formName" asp-for=Name class="form-control" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" asp-for="Username">Nombre de Usuario</label>
                                                <input type="text" id="formUsername" asp-for=Username class="form-control" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label asp-for=Email class="form-label">Su Email</label>
                                                <input type="email" asp-for=Email id="formEmail" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label asp-for=ConfirmEmail class="form-label">Confirme su email</label>
                                                <input type="email" asp-for=ConfirmEmail id="formConfirmEmail" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" asp-for="Password">Contraseña</label>
                                                <input type="password" asp-for="Password" id="formPassword" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" asp-for="ConfirmPassword">Repita su contraseña</label>
                                                <input type="password" asp-for="ConfirmPassword" id="formPasswordConfirm" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-check d-flex justify-content-center mb-5">
                                            <input class="form-check-input me-2"
                                                   type="checkbox"                                                   
                                                   id="formStatements" asp-for="IsStatementsAgreed" />
                                            <label class="form-check-label" asp-for="IsStatementsAgreed">
                                                Estoy de acuerdo con todas las declaraciones en <a href="#!">Termos de servicio</a>
                                            </label>
                                        </div>

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <button type="submit" class="btn btn-primary btn-lg">Registrarse</button>
                                        </div>

                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                    <img src="~/img/eng.jpg" class="img-fluid" alt="Sample image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
